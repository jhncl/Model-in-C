#include "headers.h"
/*#include "struct.c"*/
#include "functions.h"
#include "print.h"
     int
     main (int argc,char *argv[])
     {
struct_data data;
struct_para para;
struct_priors priors;
struct_MH MH;

 int burn,iters,thin;
	const gsl_rng_type * T;
	gsl_rng * RNG;
	gsl_rng_env_setup ();
	T = gsl_rng_default;
	RNG = gsl_rng_alloc (T);
  	gsl_rng_set (RNG, 1); /*seed*/
	dataLMN("LMNmaxdata.txt",&data.L,&data.M,&data.N);
	datadouble("ydata.txt",data.y);
        datadouble("xdata.txt",data.x);
        dataint("NoORFdata.txt",data.NoORF);
        dataint("NoTIMEdata.txt",data.NoTIME);
	burn=atoi(argv[1]);   /*Burn in*/
	iters=atoi(argv[2]);    /*iterations*/
	thin=atoi(argv[3]);        /*thining*/
	fillMH(&MH);
        filldata(&data);
	fillpara(&para,&data);
	fillpriors(&priors);

	printheader(&data);
	mainloop(burn,1,RNG,&data,&para,&priors,&MH,0);
	mainloop(iters,thin,RNG,&data,&para,&priors,&MH,1);
       	gsl_rng_free(RNG);
	return 0;
}
